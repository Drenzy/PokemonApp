<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Pokémon MAUI App"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Button Text="Fetch Pokémon (Gen 1-3, Multithreaded)"
                    Clicked="OnFetchMultipleGenerationsClicked"
                    HorizontalOptions="Fill"/>

            <Editor x:Name="PokemonEditor"
                    Placeholder="Pokémon data will appear here..."
                    AutoSize="TextChanges"
                    HeightRequest="300"/>

            <Button Text="Save Edited Data"
                    Clicked="OnSaveEditedDataClicked"
                    HorizontalOptions="Fill"/>

            <Label x:Name="ResultLabel"
                   Text=""
                   FontSize="14"
                   HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
